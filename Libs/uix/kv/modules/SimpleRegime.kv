
<BattonBoxLayout>
    data: app.get_tried_word()
    but_color: (255/255.0, 255/255.0, 157/255.0, 1)
    canvas:
        Color:
            rgba: self.but_color
        Rectangle:
            pos: self.pos
            size: self.size

    MDLabel:
        pos_hint: {"center_x":0.5,"center_y":0.5}
        font_size: 32
        halign:"center"

<RestartButton>:
    canvas.before:
        Color:
            rgba: hex('#F2F3F4')
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [2,2]
    id: start_but
    text: "Restart"
    font_size: 22
    size_hint_y:0.6
    size_hint_x:0.4

<SimpleRegime>
    #custom parameters
    data_base_data: None
    data_base_data_max_len: None
    tried_word_data: None

    spacing: 30
    orientation: 'vertical'
    size_hint_x: 0.82
    size_hint_y: 0.8
    pos_hint: {"center_x":0.5,"center_y":0.5}
    BoxLayout:
        pos_hint:{"center_x":0.5,'top':1}
        id: word
        canvas:
            Color:
                rgba: hex("#F6F6C4")
            Rectangle:
                pos: self.pos
                size: self.size
        size_hint_x: 0.8
        size_hint_y: 0.1
        MDLabel:
            pos_hint: {"center_x":0.5,"center_y":0.5}
            font_size: 42
            halign:"center"



    BoxLayout:
        spacing: 20
        pos_hint: {'bottom':1}
        size_hint_x: 1
        size_hint_y: 0.76
        orientation: "vertical"
        BoxLayout:
            spacing: 20

            pos_hint: {"center_y": 0.25}
            size_hint_y: 0.46
            size_hint_x: 1
            orientation: 'horizontal'
            BattonBoxLayout:
                id: top_left
                on_release:
                    root.chek_valid(self)


            BattonBoxLayout:
                id: top_right
                on_release:
                    root.chek_valid(self)


        BoxLayout:
            spacing: 20

            pos_hint: {"center_y": 0.75}
            size_hint_y: 0.46
            size_hint_x: 1
            orientation: "horizontal"
            BattonBoxLayout:
                id: bottom_left
                on_release:
                    root.chek_valid(self)

            BattonBoxLayout:
                id: bottom_right
                on_release:
                    root.chek_valid(self)
