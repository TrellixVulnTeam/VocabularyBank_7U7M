
<SimpleStadyRegime>
    BoxLayout:
        size_hint: 1,1
        canvas:
            Color:
                rgba: hex('#FFFFE4')
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            orientation: "vertical"
            pos_hint: {'center_x':0.5,'center_y':0.5}
            size_hint_y: 0.98
            size_hint_x: 0.92

            BoxLayout:
                pos_hint: {'top':1}
                orientation: "horizontal"
                size_hint_y: 0.8
                size_hint_x: 1

                id: list_editor
                BoxLayout:
                    orientation: "vertical"
                    pos_hint: {'center_y':0.5,'left':1}
                    size_hint_y: 1
                    size_hint_x: 0.45
                    orientation: 'vertical'
                    id: have_book
                    MDLabel:
                        size_hint_y: 0.2
                        pos_hint: {'top':1,'center_x':0.5}
                        text: "have books"
             
                    ScrollView:
                        id: list_view
                        size_hint_x: 1
                        size_hint_y: 0.8
                        do_scroll_x: False
                        do_scroll_y: True
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                        CustomBooksList:

                BoxLayout:
                    orientation: "vertical"
                    pos_hint: {'center_y':0.5,'right':1}
                    size_hint_y: 1
                    size_hint_x: 0.45
                    orientation: 'vertical'
                    id: taked_book
                    MDLabel:
                        size_hint_y: 0.2
                        pos_hint: {'top':1,'center_x':0.5}
                        text: "taked"

                    ScrollView:
                        id: list_view
                        size_hint_y: 0.8
                        size_hint_x: 1
                        do_scroll_x: False
                        do_scroll_y: True
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                        CustomBooksList:

            BoxLayout:
                size_hint_y: 0.2
                size_hint_x: 1
                orientation: "horizontal"
                id: bottom_menu
