<Dialog_book_add>:

    MDTextField:
        size_hint: 0.9,0.45
        id: name_new_book
        pos_hint:  {'top':1, 'center_x': 0.5, 'center_y': 0.5}
        hint_text: "Input name of book"

    BoxLayout:
        orientation: 'horizontal'
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        MDFlatButton:
            size_hint: 0.45,0.45
            text: "CANCEL"
            on_release: app.cancel()

        MDFlatButton:
            size_hint: 0.45,0.45
            text: "OK"
            on_release: app.create()
