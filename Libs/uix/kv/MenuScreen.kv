#:import hex kivy.utils.get_color_from_hex



<MenuScreen>:
    name: 'menu'
    BoxLayout:
        size_hint_x:1
        size_hint_y:1
        orientation: "vertical"
        canvas:
            Color:
                rgba: hex('#3A434B')
            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
            canvas:
                Color:
                    rgba: hex("#F6F6C4")
                Rectangle:
                    pos: self.pos
                    size: self.size
            id: toolbar
            pos_hint: {"top": 1}
            orientation: 'horizontal'
            size_hint_y: 0.08
            size_hint_x: 1

            BoxLayout:
                pos_hint: {"bottom": 1}
                size_hint_y: 0.9
                size_hint_x: 0.96

                MDIconButton:
                    id: Settings
                    icon: "cog-outline"
                    user_font_size: "32sp"

                    pos_hint: {"left":1, 'center_x': 0.9,'center_y': 0.5}

                MDLabel:
                    id: Random_word
                    size_hint: 0.6, 1
                    text: "This is a plays for rand word"
                    font_style: "H5"

                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}


                MDIconButton:
                    id: Localization
                    icon: "earth"

                    user_font_size: "32sp"
                    pos_hint: {"right":1, 'center_x': 0.9,'center_y': 0.5}


        BoxLayout:
            pos_hint: {'top':1}

            size_hint_y: 0.84
            size_hint_x: 0.9

            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            id: train_menu

            ScrollView:
                BoxLayout:
                    spacing: 20

                    orientation: "vertical"

                    pos_hint: {'top':1}
                    size_hint_x: 1
                    size_hint_y: 0.5
                    BoxLayout:
                        spacing: 20
                        padding: 30,10,30,10
                        canvas:
                            Color:
                                rgba: hex('#FFFFE4')
                            Rectangle:
                                pos: self.pos
                                size: self.size
                        pos_hint: {'top':1,'center_x': 0.5}
                        size_hint_x: 0.9
                        size_hint_y: None
                        id: simple_ragime
                        orientation: "horizontal"

                        MDFlatButton:
                            background_color: 0,0,0,0
                            canvas.before:
                                Color:
                                    rgba: hex('#4E575F')

                                RoundedRectangle:
                                    pos: self.pos
                                    size: self.size
                                    radius: [5,5]
                            font_size: "18sp"
                            md_bg_color: "#3A4353"
                            text_color: "#212121"
                            pos_hint: {'left':1, 'center_y': 0.5}
                            text: "Standart"
                            on_release:
                                app.load_learning('Standart')

                        MDLabel:
                            halign: 'center'
                            valign: 'center'
                            canvas.before:
                                Color:
                                    rgba: hex('#FFFFE4')
                                Rectangle:
                                    pos: self.pos
                                    size: self.size
                            pos_hint: {'right':1, 'center_y': 0.5}
                            text: "You get one word from one selected dict "


                    BoxLayout:
                        spacing: 20
                        padding: 30,10,30,10
                        canvas.before:
                            Color:
                                rgba: hex('#FFFFE4')
                            Rectangle:
                                pos: self.pos
                                size: self.size


                        pos_hint: {'top':1,'center_x': 0.5}
                        size_hint_x: 0.9
                        size_hint_y: None
                        id: rundom_regime
                        orientation: "horizontal"

                        MDFlatButton:
                            background_color: 0,0,0,0
                            canvas.before:
                                Color:
                                    rgba: hex('#4E575F')

                                RoundedRectangle:
                                    pos: self.pos
                                    size: self.size
                                    radius: [5,5]

                            font_size: "18sp"
                            text_color: "#212121"
                            pos_hint: {'left':1, 'center_y': 0.5}
                            text: "Rundom"
                            on_release:
                                app.load_learning('Rundom')

                        MDLabel:
                            halign: 'center'
                            valign: 'center'
                            canvas.before:
                                Color:
                                    rgba: hex('#FFFFE4')
                                Rectangle:
                                    pos: self.pos
                                    size: self.size

                            pos_hint: {'right':1, 'center_y': 0.5}
                            text: "You get randomly word from all your dict "




        CustomBottomNavigation:
